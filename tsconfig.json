{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "Layout": ["src/Layout/index.tsx"],
      "Router": ["src/Router/index.ts"],
      "pages/*": ["src/pages/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules/**/*"]
}
